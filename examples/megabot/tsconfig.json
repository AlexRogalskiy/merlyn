{
  "include": ["src/**/*"],
  "compilerOptions": {
    "types": ["svelte", "vite/client", "merlin/app"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "$lib/*": ["./src/lib/*"],
      "$res/*": ["./src/res/*"],
      "$scenes/*": ["./src/scenes/*"]
    }
  }
}
